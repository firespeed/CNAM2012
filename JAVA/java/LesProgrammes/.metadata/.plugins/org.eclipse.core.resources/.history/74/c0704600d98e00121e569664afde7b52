import java.util.HashSet;
import java.util.Iterator;

public class HashSetEleve {
	public static void main (String args[])
	{
		String reponse;
		HashSet<Eleve> cours1 = new HashSet<Eleve>();
		HashSet<Eleve> cours2 = new HashSet<Eleve>();
		
		System.out.print("Voulez-vous saisir un eleve ? (O/N)");
		reponse = Clavier.lireString();
		System.out.println();
	
		// Saisie du cours 1
		while(reponse.equals("O"))
		{
			// Création d'un élève
			Eleve eleve = new Eleve();
			
			System.out.print("Nom : ");			
			eleve.setNom(Clavier.lireString());
			System.out.println();
			
			System.out.print("Prenom : ");
			eleve.setPrenom(Clavier.lireString());
			System.out.println();
			
			System.out.print("Age : ");
			eleve.setAge(Clavier.lireInt());
			System.out.println();
			
			cours1.add(eleve);			
			
			System.out.print("Voulez-vous saisir un autre eleve ? (O/N)");
			reponse = Clavier.lireString();
			System.out.println();
		}
	
		// Saisie du cours 2
		while(reponse.equals("O"))
		{
			// Création d'un élève
			Eleve eleve = new Eleve();
			
			System.out.print("Nom : ");			
			eleve.setNom(Clavier.lireString());
			System.out.println();
			
			System.out.print("Prenom : ");
			eleve.setPrenom(Clavier.lireString());
			System.out.println();
			
			System.out.print("Age : ");
			eleve.setAge(Clavier.lireInt());
			System.out.println();
			
			cours2.add(eleve);			
			
			System.out.print("Voulez-vous saisir un autre eleve ? (O/N)");
			reponse = Clavier.lireString();
			System.out.println();
		}

		System.out.println("Liste des élèves du cours1:");
		Iterator<Eleve> iter1 = cours1.iterator();		
		while(iter1.hasNext())
		{
			Eleve eleve = new Eleve();
			eleve = iter1.next();
			System.out.println("----------------------------------");
			System.out.println("Nom : "+eleve.getNom());
			System.out.println("Prénom : "+eleve.getPrenom());
			System.out.println("Age : "+eleve.getAge());
			System.out.println("----------------------------------");
		}

		System.out.println("Liste des élèves du cours2:");
		Iterator<Eleve> iter2 = cours2.iterator();		
		while(iter1.hasNext())
		{
			Eleve eleve = new Eleve();
			eleve = iter1.next();
			System.out.println("----------------------------------");
			System.out.println("Nom : "+eleve.getNom());
			System.out.println("Prénom : "+eleve.getPrenom());
			System.out.println("Age : "+eleve.getAge());
			System.out.println("----------------------------------");
		}

		
	}
}
	
	
	
	
	
}
